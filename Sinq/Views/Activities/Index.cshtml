                                // you may want to pass 'this' explicitly
                                if (doubleHandler !== undefined) {
                                    doubleHandler.call(viewModel, bindingContext.$data, event);
                                }
                            }
                            clicks = 0;
                        }, delay);
                    }
                });
            }
