@model IEnumerable<Sinq.Models.Activity>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<div class="container">

    @*Folders*@
   
    <div class='col-lg-3'>Folders:
        <ul data-bind="foreach: AllFolders">
            <li data-bind="singleOrDoubleClick: { dblclick: $root.fnShowActivitiesFromFolder.bind(undefined,$data) } ">
             @*when it is selected*@
            <span data-bind="text: Name"> </span>
